@model TVShop.DataAccess.Customer

@{
    ViewData["Title"] = "Index";
}


<div class="pt-4">
    <div class="text-center">
        <h1 >Log In</h1>
    </div>
    <hr />
    <div class=" mx-auto col-sm-4 neonText px-4 pt-4 pb-4 mt-5">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="text-left">User Name</label>
                <input asp-for="Name" class="form-control" />
                @Html.ValidationMessage("IdError", new{ @class="text-danger"})
            </div>
            <div class="form-group">
                <label asp-for="Password" class="text-left"></label>
                <input type="password" asp-for="Password" class="form-control" />
                @Html.ValidationMessage("PasswordError", new{ @class="text-danger"})
            </div>
            <div class="form-group text-left">
                Not registered yet? <a asp-controller="Customers" asp-action="Create">Register!</a>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
    
</div>
