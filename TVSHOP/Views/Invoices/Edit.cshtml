@model TVShop.DataAccess.Invoice

@{
    ViewData["Title"] = "Edit";
}
<div class="pt-4 mx-5 text-center px-5">
    <h1>Edit</h1>

    <h4>Invoice</h4>
    <hr />
    <div class="row">
        <div class="col-md-4 mx-auto">
             <div class="form-group">
                <table class=" mx-auto">
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model =>model.ProductId):
                        </td>
                        <td>
                            @Html.DisplayFor(model =>model.ProductId)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model =>model.Product.Model):
                        </td>
                        <td>
                            @Html.DisplayFor(model =>model.Product.Model)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model =>model.Product.Price):
                        </td>
                        <td>
                            @Html.DisplayFor(model =>model.Product.Price)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model =>model.Product.Inventory):
                        </td>
                        <td>
                            @Html.DisplayFor(model =>model.Product.Inventory)
                        </td>
                    </tr>
                </table>
                    
            </div>
            <br />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="InvoiceId" />
                <input type="hidden" asp-for="CustomerId" />
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" asp-for="Customer.CustomerId" />
                <input type="hidden" asp-for="Customer.Invoices" />
                <input type="hidden" asp-for="Product.Invoices" />
                <input type="hidden" asp-for="Product.Manufacturer" />
            
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label"></label>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control"></>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                    @Html.ValidationMessage("QError", new{ @class="text-danger"})
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control"></>
                    <span asp-validation-for="Date" class="text-danger"></span>
                    @Html.ValidationMessage("DError", new{ @class="text-danger"})
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-warning" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div>
        <a asp-controller="Account" asp-action="AccountDetail">Cancel</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
